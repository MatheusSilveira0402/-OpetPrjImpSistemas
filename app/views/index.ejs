<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>OpeNet</title>
		
		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
	
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>


		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

        <script>
			$(document).ready( function(){
				$('#btn_cadastro').click(function(){
					
					window.location.href = '/cadastro';	

				});
			});
		</script>
	</head>

	<body>

		<div class="container">
            <div class="row vertical-offset-80">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                    	<div class="panel-heading">                                
                            <div class="row-fluid user-row">
                                <img src="images/opet.png" class="img-responsive" alt="Multiroom Chat"/>
                            </div>
                        </div>
                        <div class="panel-body">
                            <form accept-charset="UTF-8" role="form" class="form-signin" action="/chat" method="post">
                                <fieldset>
                                    <label class="panel-login">
                                        <div class="login_result"></div>
                                    </label>
                                    <input class="form-control" placeholder="Usuario" id="usuario" name="usuario" type="text">
                                    <br></br>
                                    <input class="form-control" placeholder="Sua senha" id="senha" name="senha" type="password">
                                    <br></br>
                                    
                                    <input class="btn btn-lg btn-success btn-block" type="submit" id="entrar" value="Entrar »">
                                    
                                </fieldset>
                            </form>
                            <br>
                            <button class="btn btn-lg btn-success btn-block" type="button" id="btn_cadastro">Fazer Cadastro »</button>
                        </div>
                    </div>

                    <div>
                        <% if(validacao.length > 0) {%>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="alert alert-danger">
                                        <strong>Atenção!</strong>
                                        <ul>
                                            <% for(var i = 0; i < validacao.length; i++) { %>
                                                <li><%=validacao[i].msg%></li>
                                            <% } %>
                                        </ul>   
                                    </div>
                                </div>
                            </div>
                        <% } %>

                        
                    </div>
                </div>
            </div>
        </div>
		
	</body>
</html>